set hlsearch
set nu
set incsearch
set ignorecase
set smartcase
set ts=4
set softtabstop=4
set shiftwidth=4
set expandtab
set autoindent
set listchars=tab:>-,trail:~
set list

let mapleader = "\<Space>"
nnoremap Y y$

vnoremap Y "+y

nnoremap < <<
nnoremap > >>

noremap <LEADER><CR> :nohlsearch<CR>

nnoremap <LEADER>tt :%s/    /\t/g
vnoremap <LEADER>tt :s/    /\t/g

"      ^
"      "      u
" < n     i >
" "      e
" "      v
"
inoremap tn <Esc>
noremap k i
noremap K I
noremap l u

noremap <silent> n h
noremap <silent> u k
noremap <silent> e j
noremap <silent> i l
noremap <silent> N 7h
noremap <silent> U 5k
noremap <silent> E 5j
noremap <silent> I 7l

noremap <silent> <C-n> 0
noremap <silent> <C-i> $

noremap s <nop>
noremap S :w<CR>
noremap <LEADER>rc :e $HOME/.vimrc<CR>
noremap <LEADER>rr :source $HOME/.vimrc<CR>
noremap Q :q<CR>
noremap ; :

noremap si :vsplit<CR>
noremap se :split<CR>

noremap <LEADER>i <C-w>l
noremap <LEADER>u <C-w>k
noremap <LEADER>n <C-w>h
noremap <LEADER>e <C-w>j

"noremap tn :tabprevious<CR>
"noremap ti :tabnext<CR>
noremap tn :bprevious<CR>
noremap ti :bnext<CR>
noremap te :bdelete<CR>

nnoremap \p 1<C-G>

noremap <LEADER><LEADER> <Esc>/<++><CR>:nohlsearch<CR>c4l

noremap ` ~
noremap - N
noremap = n

noremap <C-c> zz

noremap \s :%s//g<left><left>

":vnoremap <LEADER>cn :s/^/\/\/<cr>
":vnoremap <LEADER>cu :s/\/\//<cr>
":nnoremap <LEADER>cn :s/^/\/\/<cr>
":nnoremap <LEADER>cu :s/\/\//<cr>

noremap gd <c-]>zz

":nnoremap <space> za

vnoremap * "/y/<C-r>/<CR>
vnoremap # "/y?<C-r>/<CR>

set clipboard=unnamed
set mouse=a


""" vim-plug auto download
if has('win32')
    let g:config_path = $HOME . '/vimfiles'
else
    let g:config_path = $HOME . '/.vim'
endif

if empty(glob(g:config_path . '/autoload/plug.vim'))
    let g:vim_plug_url = "https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim"
    execute '!curl -fLo ' . g:config_path . '/autoload/plug.vim --create-dirs ' . g:vim_plug_url
    autocmd VimEnter * PlugInstall --sync | source $HOME/.vimrc
endif

call plug#begin()

" ======= plug begin ======
Plug 'vim-airline/vim-airline'
Plug 'preservim/nerdtree', { 'on': 'NERDTreeToggle' }
Plug 'jiangmiao/auto-pairs'
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'junegunn/fzf.vim'
Plug 'octol/vim-cpp-enhanced-highlight'
" ======= plug end   ======

call plug#end()

""" plug-config: 
"""

""" plug-config: vim-airline
let g:airline#extensions#tabline#enabled = 1
let g:airline#extensions#tabline#formatter = 'unique_tail'
"""

""" plug-config: nerd-tree
nnoremap <leader>tn :NERDTreeToggle<CR>
let NERDTreeQuitOnOpen='3'
let NERDTreeMapOpenExpl='O'
let NERDTreeMapJumpParent='h'
let NERDTreeMapJumpPrevSibling='u'
let NERDTreeMapJumpNextSibling='e'
"""

""" plug-config: fzf
let g:fzf_vim = {}
let g:fzf_vim.preview_window = ['right,50%', 'ctrl-/']
let g:fzf_vim.buffers_jump = 1
nnoremap <leader>ff :Files<CR>
nnoremap <leader>gf :GFiles<CR>
nnoremap <leader>gg :Ag<CR>
"""

""" plug-config: vim-cpp
let g:cpp_class_scope_highlight = 1
let g:cpp_member_variable_highlight = 1
let g:cpp_class_decl_highlight = 1
"""
