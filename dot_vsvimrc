source ~/.vimrc

:vnoremap <LEADER>/ :vsc Edit.CommentSelection<CR>
:vnoremap <LEADER>z :vsc Edit.UnCommentSelection<CR>
:nnoremap <LEADER>/ :vsc Edit.CommentSelection<CR>
:nnoremap <LEADER>z :vsc Edit.UnCommentSelection<CR>

:nnoremap <LEADER>fd :vsc Edit.FormatDocument<CR>
